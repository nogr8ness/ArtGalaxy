@model ArtWebsite.Models.ViewModels.UploadArtViewModel

@{
    ViewData["Title"] = "Artwork";
}

<head>
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests" />
    <link rel="stylesheet" href="~/css/img-upload.css" />
    
</head>



<h1>Upload Art</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Artwork" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <label asp-for="Title" class="form-text"></label>
                <div class="mb-3">
                    <input asp-for="Title" class="form-control" style="height:4.5em; padding-top:1.5rem"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                
            </div>


            

            <div class="form-floating">
                <label asp-for="Description" class="form-text"></label>
                
                <div class="mb-3"> <!-- Add margin-bottom class -->
                    <textarea asp-for="Description" class="form-control" style="padding-top:2rem"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <br />

            <!--IMAGE CODE-->
            <h3>Upload your image here...</h3>
            <div class="wrapper">
              <div class="box">
                <div class="js--image-preview"></div>
                <div class="upload-options">
                  <label>
                    <input asp-for="ImageFile" type="file" class="image-upload" accept="image/*" />
                  </label>
                </div>
              </div>

              <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <br />

            <fieldset class="form-group">
                <legend class="mt-4">Do you want to publish this art?</legend>

                <div class="form-check">
                    @Html.RadioButtonFor(m => m.IsPublished, true, new { @class="form-check-input", @checked="checked" })
                    @Html.LabelFor(m => m.IsPublished, "Yes, publish", new { @class="form-check-label" })
                </div>

                <div class="form-check">
                    @Html.RadioButtonFor(m => m.IsPublished, false, new { @class="form-check-input" })
                    @Html.LabelFor(m => m.IsPublished, "No, don't publish", new { @class="form-check-label" })
                </div>
            </fieldset>

            <br />

            <div class="form-floating">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script src="~/js/Upload.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
